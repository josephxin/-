
.accident-company{
	height: 3rem;
	margin: .1rem auto 0;
	border-radius: 0;
}



.accident-company-title {
	position: absolute;
	width: 100%;
	color: #f5ffff;
	display: flex;
	justify-content: space-between;
	font-size: .16rem;
	font-weight: bold;
	padding:0 0.2rem 0 0.07rem;
	height: .3rem;
	line-height: .3rem;
	background-color: rgba(25, 101, 198, .8);
}

.accident-company-content {
	font-size: .14rem;
	color: #fff;
}

.accident-company-content>li {
	height: .45rem;
	line-height: .45rem;
	display: flex;
	cursor: pointer;
}

.accident-company-content>li>p:nth-child(1) {
	min-width: .55rem;
	text-align: center;
	padding-left: 0.2rem;
}

.accident-company-content>li>p:nth-child(2) {
	flex: 1;
	text-align: center;
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
	padding: 0 .2rem;
}

.accident-company-content>li>p:nth-child(3) {
	width: .9rem;
	text-align: center;
}

.accident-company-content>li:nth-child(2n) {
	background-color: rgba(37, 104, 164, 0.2);
}

.accident-company-content>li:hover {
	background-color: rgba(255, 151, 0, 0.2);
	color: #f0fb3f;
}

.accident-company-content>li>p:nth-child(2).accident-company-content-easy {
	padding-left: .3rem;
	text-align: left;
	cursor: auto;
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
	padding-right: .3rem;
}


.company-style{
	overflow-Y: auto;
	overflow-X: hidden;
	box-sizing: border-box;
	height:2.65rem;
	margin: .3rem 0.07rem 0;
	border-radius: 0;
}

.company-style::-webkit-scrollbar {
	/*滚动条*/
	width: .08rem;
}

.company-style::-webkit-scrollbar-thumb {
	/*滚动条里面小方块*/
	border-radius: .05rem;
	box-shadow: inset 0 0 5px rgba(0, 0, 0, 0.2);
	background: #2df1f7;
}

.company-style::-webkit-scrollbar-track {
	/*滚动条里面轨道*/
	box-shadow: inset 0 0 .05rem rgba(0, 0, 0, 0.2);
	border-radius: .05rem;
	background: #042c63;
}
