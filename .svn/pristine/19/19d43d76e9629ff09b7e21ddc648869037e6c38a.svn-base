.accident-company-title {
	width: 100%;
	color: #f5ffff;
	display: flex;
	justify-content: space-between;
	font-size: .16rem;
	font-weight: bold;
	height: .3rem;
	line-height: .3rem;
	background-color: rgba(25, 101, 198, .8);
}

.accident-company-content {
	font-size: .14rem;
	color: #fff;
}

.accident-company-content>li {
	height: .45rem;
	line-height: .45rem;
	display: flex;
	cursor: pointer;
}

.accident-company-content>li>p:nth-child(1) {
	width: .55rem;
	text-align: center;
	padding-left: 0.2rem;
}

.accident-company-content>li>p:nth-child(2) {
	flex: 1;
	text-align: center;
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
}

.accident-company-content>li>p:nth-child(3) {
	width: .9rem;
	text-align: center;
}

.accident-company-content>li:nth-child(2n) {
	background-color: rgba(37, 104, 164, 0.2);
}

.accident-company-content>li:hover {
	background-color: rgba(255, 151, 0, 0.2);
	color: #f0fb3f;
}

.accident-company-content>li>p:nth-child(2).accident-company-content-easy {
	padding-left: .3rem;
	text-align: left;
	cursor: auto;
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
	padding-right: .3rem;
}